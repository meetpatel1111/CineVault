{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "CineVault",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "sidecar": true,
        "execute": true,
        "scope": [
          { "name": "bin/ffmpeg", "sidecar": true, "args": true },
          { "name": "bin/ffprobe", "sidecar": true, "args": true }
        ]
      },
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true,
        "scope": ["**"]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true,
        "open": true,
        "save": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.cinevault.app",
      "icon": [
        "icons/icon.ico",
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.png"
      ],
      "externalBin": [
        "bin/ffmpeg",
        "bin/ffprobe"
      ],
      "resources": [
        "vlc"
      ],
      "deb": {
        "depends": ["curl", "libwebkit2gtk-4.0-37", "libgtk-3-0", "libappindicator3-1", "libvlc5", "vlc", "ffmpeg"]
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "CineVault",
        "width": 1280,
        "height": 720,
        "minWidth": 800,
        "minHeight": 600
      }
    ]
  }
}
